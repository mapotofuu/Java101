<RelativeLayout android:id="@+id/relativelayout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="wooseokjung.com.java101.Setup">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/java101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:text="Java 101"
            android:textColor="#ff000000"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="0dp"/>

        <wooseokjung.com.java101.TextViewWhitePine
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/java101"
            android:layout_centerHorizontal="true"
            android:text="Setting up Java"
            android:textColor="#ff050505"
            android:textSize="30dp"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/step1"
                android:textColor="#ff000000"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:typeface="sans"
                />

            <TextView
                android:id="@+id/step1desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step1desc"
                android:textColor="#ff000000"
                android:textSize="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/step1"
                android:layout_alignStart="@+id/step1"
                android:layout_centerVertical="true"
                android:text="@string/step2"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:typeface="sans"
                />

            <TextView
                android:id="@+id/step2desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step2desc"
                android:textColor="#ff000000"
                android:textSize="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/step3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/step2"
                android:layout_alignStart="@+id/step2"
                android:layout_below="@+id/step2"
                android:layout_marginTop="5dp"
                android:text="@string/step3"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:typeface="sans"
                />

            <TextView
                android:id="@+id/step3desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step3desc"
                android:textColor="#ff000000"
                android:textSize="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:typeface="sans"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
