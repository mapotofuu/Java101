<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wooseokjung.com.java101.Setup"
    android:background="#F5F5F5"
    android:id="@+id/">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java 101"
        android:id="@+id/java101"
        android:textColor="#ff000000"
        android:textSize="25dp"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting up Java"
        android:id="@+id/title"
        android:textColor="#ff050505"
        android:textSize="30dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/java101"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1: Download the JDK"
        android:id="@+id/step1"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2: Install the JDK"
        android:id="@+id/step2"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/step1"
        android:layout_alignStart="@+id/step1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 3: Set Environment Variables"
        android:id="@+id/step3"
        android:layout_marginTop="101dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/step2"
        android:layout_alignLeft="@+id/step2"
        android:layout_alignStart="@+id/step2" />


</RelativeLayout>
